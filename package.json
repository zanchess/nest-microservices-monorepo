{
  "name": "nest-microservices-monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "concurrently -c \"blue.bold,yellow.bold,cyan.bold,magenta.bold\" \"yarn:build:*\"",
    "build:service": "nest build service",
    "build:api": "nest build api-gateway",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "concurrently -c \"blue.bold,yellow.bold,cyan.bold,magenta.bold\" \"yarn:start:dev:*\"",
    "start:dev:i18n": "mkdir -p ./dist/i18n && cp -r ./i18n/* ./dist/i18n/",
    "start:dev:api": "yarn start --watch api-gateway",
    "start:dev:service": "yarn start --watch service",
    "start:debug": "nest start --debug --watch",
    "start:prod:api": "node dist/apps/api-gateway/main",
    "start:prod:service": "node dist/apps/service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/service/test/jest-e2e.json",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs-cls/transactional": "^2.4.1",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.3",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.6",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.6",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.6",
    "@nestjs/platform-express": "^11.0.6",
    "@nestjs/platform-socket.io": "^11.0.6",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.1.0",
    "@nestjs/websockets": "^11.0.6",
    "@orbs-network/ton-access": "^2.3.3",
    "@prisma/client": "^5.19.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@telegram-apps/init-data-node": "^1.0.4",
    "@ton-api/client": "^0.2.0",
    "@ton/core": "^0.59.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.1.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cache-manager": "^6.4.0",
    "cache-manager-redis-yet": "^5.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "express-basic-auth": "^1.2.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "nestjs-cls": "^5.0.1",
    "nestjs-i18n": "^10.4.9",
    "nestjs-rmq": "^2.13.0",
    "nestjs-telegraf": "^2.8.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-adapter": "^2.5.5",
    "telegraf": "^4.16.3",
    "webpack": "^5.97.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.0.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.19.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "@app/coin-flip-shared/(.*)$": "<rootDir>/libs/coin-flip-shared/src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
